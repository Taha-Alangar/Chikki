<?xml version="1.0" encoding="utf-8"?>
<set android:fillAfter="true" android:interpolator="@android:anim/linear_interpolator"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <translate android:fillAfter="true" android:toXDelta="75%p" android:fromXDelta="0%p"
        android:startOffset="300" android:duration="800"/>
    <translate android:fillAfter="true" android:startOffset="1100" android:toYDelta="70%p"
        android:fromYDelta="0%p" android:duration="800"/>
    <translate android:fillAfter="true" android:toXDelta="-75%p" android:fromXDelta="0%p"
        android:startOffset="1900" android:duration="800"/>
    <translate android:fillAfter="true" android:startOffset="2700" android:toYDelta="-70%p"
        android:fromYDelta="0%p"/>

    <rotate android:interpolator="@android:anim/cycle_interpolator" android:startOffset="3800"
        android:duration="1000" android:toDegrees="360" android:repeatMode="restart"
        android:repeatCount="infinite" android:pivotY="50%" android:pivotX="50%" android:fromDegrees="0"/>

</set>